<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
  <div class="col-md-4">
    <h1>Players</h1>
  </div>
  <div class="col-md-2 offset-md-6">
    <%= link_to 'New Player', new_player_path, class: "btn btn-success" %>
  </div>
</div>
<div class="card-columns">
<% @players.each do |player| %>
  <div class="container">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%=player.name%></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%=player.email%></h6>
        <h5 class="card-title">$<%=player.cash%></h5>
        <%= link_to 'Edit', edit_player_path(player), class: "btn btn-info"%>
        <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

      </div>
    </div>
  </div>
  <% end %>
  </div>

</div>