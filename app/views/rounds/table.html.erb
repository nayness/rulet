
<div class="card text-center" id="table">
  <div class ="row mb-3 mt-3 ml-5">
    <h1 class="text-success"> Time remaining: <span class="timer"></span></h1>
    <span class="card-title ml-3" id="round-title"></span>
    <div class="round-result ml-3"></div>
  </div>
  <div class="card-body">
    <div class="spinner-border text-warning d-none" role="status">
      <span class="sr-only">Loading...</span>
    </div>
    <div class="row text-center pagination-centered" id="round">
      <% if @players %>
        <% @players.each do |player| %>
          <div class = "col-md-2 player">
            <h5 class="bet-amount">$<%= player.cash%></h5>
            <div class="row">
              <div class="col-md-8">
                <%= link_to player.name, player_path(player), class: 'btn btn-outline-primary' %>
              </div>
              <div class="bet-color" style="background-color: <%=player.gamble_color(@round.id)%>"></div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mt-3 mb-3">
      <button class="btn btn-success" id="new-player" data-players= "<%=@round.players.count%>"><span class="add-player">+ player</span></button>
    </div>
  </div>
</div>
<div class="container mt-3">
<div class="card-columns infinity-rounds"></div>
</div>
<%= render 'rounds'%>